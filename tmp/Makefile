################################################################################
# dependencies

OBJ		=							\
		main.o

MAIN_INC	=
MAIN_SRC	=							\
		$(SRC_DIR)/main.c

################################################################################
# target: dependencies
#	action

PHONY := all
all: $(OBJ)


%.s:
	@echo	"	CC	tmp/$@"
	$(Q)$(CC) $(CFLAGS) -I $(INC_DIR) -S $< -o $@
%.o: %.s
	@echo	"	AS	tmp/$@"
	$(Q)$(AS) $< -o $@


main.s: $(MAIN_SRC) $(MAIN_INC)


PHONY += clean
clean:
	@echo	"	RM	*.o *.s"
	$(Q)rm -f	*.o *.s

################################################################################
# Declare the contents of the .PHONY variable as phony.
.PHONY: $(PHONY)


################################################################################
######## End of file ###########################################################
################################################################################
